<p id="notice"><%= notice %></p>

<h1>Permissions</h1>

<table class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp">
  <thead>
    <tr>
      <th class="mdl-data-table__cell--non-numeric">name</th>
      <th class="mdl-data-table__cell--non-numeric">description</th>
      <th colspan="3"></th>
    </tr>
    <tr>
    </tr>
  </thead>

  <tbody>
    <% @permissions.each do |permission| %>
      <tr>
        <td class="mdl-data-table__cell--non-numeric"><%= permission.name %></td>
        <td class="mdl-data-table__cell--non-numeric"><%= permission.description %></td>
        <td><%= link_to 'Show', admin_permission_path(permission) %></td>
        <td><%= link_to 'Edit', edit_admin_permission_path(permission) %></td>
        <td><%= link_to 'Destroy', admin_permission_path(permission), method: :delete, data: {confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


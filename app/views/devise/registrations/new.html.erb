<center>
  <h5 class="mdl-color-text--primary">Sign up</h5>
  <div class="container">
    <div class="z-depth-1 grey lighten-4 mdl-grid" style="display: inline-block; padding: 32px 48px 0px 48px;">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'mdl-cell mdl-cell-12-phone') do |f| %>
        <div class="mdl-grid">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'mdl-textfield__input' %>
            <%= f.label :email, class: 'mdl-textfield__label' %>
          </div>
        </div>
        <div class="mdl-grid">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <%= f.password_field :password, autocomplete: "off", class: 'mdl-textfield__input' %>
            <%= f.label :password, class: 'mdl-textfield__label' %>
          </div>
        </div>
        <div class="mdl-grid">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'mdl-textfield__input' %>
            <%= f.label :password_confirmation, class: 'mdl-textfield__label' %>
          </div>
        </div>
        <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
          <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
        <% end -%>
        <center>
          <%= f.submit "Sign up", name: 'btn_login', class: 'mdl-button mdl-js-button mdl-button--primary mdl-js-ripple-effect' %>
        </center>
      <% end %>
    </div>
  </div>
</center>
